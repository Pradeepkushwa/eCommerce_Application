  </tr>
  <tr>
   <th>Address Details</th>
       <table border="1">
      <tr>
        <th>street_address</th>
        <td><%= @order.address.street_address %></td>
      </tr>
      <tr>
        <th>city</th>
        <td><%= @order.address.city %></td>
      </tr>
      <tr>
        <th>state</th>
        <td><%= @order.address.state %></td>
      </tr>
      <tr>
        <th>zip_code</th>
        <td><%= @order.address.zip_code %></td>
      </tr>

    </table>
  </tr>
