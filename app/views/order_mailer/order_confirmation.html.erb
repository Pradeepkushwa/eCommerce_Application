<h1>Order Confirmation</h1>
<p>Thank you for your order!</p>
<h1>Order Details</h1>
<table border="1">
  <tr>
    <th>User Name</th>
    <td><%= @order.user.first_name %>&nbsp;
      <%= @order.user.last_name %></td>
  </tr>
  <tr>
    <th>Order Number</th>
    <td><%= @order.order_number %></td>
  </tr>
  <tr>
    <th>Total MRP</th>
    <td><%= @order.total_mrp %></td>
  </tr>
  <tr>
    <th>Total Price</th>
    <td><%= @order.total_price %></td>
  </tr>
  <tr>
    <th>Discount</th>
    <td><%= @order.discount %></td>
  </tr>
  <tr>
    <th>Tax</th>
    <td><%= @order.tax %></td>
  </tr>
  <tr>
    <th>Payment Method</th>
